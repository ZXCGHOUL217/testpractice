@page
@model IndexModel
@{
    ViewData["Title"] = "Main - online store";
}

<div class="container d-lg-none">
    <h1 class="text-center my-4"> Магазин электроники</h1>

    <div class="mb-4">
        <h5> Категории</h5>
        <div class="d-flex overflow-auto" style="gap: 10px; padding-bottom: 10px;">
            @foreach (var category in Model.Categories)
            {
                <a href="#" class="btn btn-outline-primary rounded-pill px-3 py-2">
                    @category.Name
                </a>
            }
        </div>
    </div>

    <h4 class="mb-3">Поппулярные товары</h4>
    <div class="row">
        @foreach (var product in Model.FeaturedProducts)
        {
            <div class="col-12 mb-3">
                <div class="card">
                    <div class="row g-0">
                        <div class="col-4">
                            <img src="@product.ImageUrl" class="img-fluid rounded-start" alt="@product.Name" style="height: 120px; object-fit: cover;"/>
                        </div>
                        <div class="col-8">
                            <div class="card-body">
                                <h6 class="card-title">@product.Name</h6>
                                <p class="card-text text-success fw-bold">@product.Price.ToString("C")</p>
                                <a href="#" class="btn btn-sm btn-primary">В корзину</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>

</div>

<div class="container d-none d-lg-block">
    <div class="hero-section bg-primary text-white p-5 rounded mb-5">
        <h1 class="display-4">Welcome to the store</h1>
        <p class="lead">Лучшие товары по лучшим ценам</p>
        <a href="/Catalog" class="btn btn-light btn-lg">Перейти в каталог</a>
    </div>

    <div class="row">
        <div class="col-3">
            <div class="card">
                <div class="card-header">
                    <h5>Категории</h5>
                </div>
                <div class="list-group list-group-flush">
                    @foreach (var category in Model.Categories)
                    {
                        <a href="#" class="list-group-item list-group-item-action">
                            @category.Name
                            <span class="badge bg-primary float-end">@category.Products?.Count</span>
                        </a>
                    }
                </div>
            </div>
        </div>

        <div class="col-9">
            <h2 class="mb-4">Рекомендуемые товары</h2>
            <div class="row row-cols-1 row-cols-2 row-cols-lg-3 g-4">
                @foreach (var product in Model.FeaturedProducts)
                {
                    <div class="col">
                        <div class="card h-100 shadow-sm">
                            <img src="@product.ImageUrl" class="img-fluid rounded-start" alt="@product.Name" style="height: 120px; object-fit: cover;"/>
                            <div class="card-body">
                                <h5 class="class-title">@product.Name</h5>
                                <p class="card-text text-muted small">@product.Description</p>
                                <div class="d-flex justify-conyent-between align-items-center">
                                    <span class="h5 text-seccess">@product.Price.ToString("C")</span>
                                    <a href="#" class="btn btn-primary">Купить</a>
                                </div>
                            </div>
                            <div class="card-footer bg-transparent">
                                <small class="text-muted">Категории: @product.Category?.Name</small>
                            </div>
                        </div>
                    </div>
                }

            </div>
        </div>
    </div>
</div>

<style>
    .hero-section{
        background: linear-gradient(135deg, #4361ee, #3f37c9);
    }
    .card{
        transition: transform 0.2s;
    }
    .card:hover{
        transform: translateY(-5px);
    }
</style>