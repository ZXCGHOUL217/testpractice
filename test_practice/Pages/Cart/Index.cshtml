@page
@model test_practice.Pages.Cart.IndexModel
@{
    ViewData["Title"] = "Корзина покупок";
}

<div class="container py-4">
    <h1 class="mb-4">🛒 Корзина покупок</h1>
    
    @if (Model.CartItems.Any())
    {
        <!-- Десктопная версия -->
        <div class="d-none d-md-block">
            <div class="table-responsive">
                <table class="table table-hover">
                    <thead class="table-light">
                        <tr>
                            <th>Товар</th>
                            <th>Цена</th>
                            <th>Количество</th>
                            <th>Сумма</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.CartItems)
                        {
                            <tr>
                                <td>
                                    <div class="d-flex align-items-center">
                                        <img src="@item.Product?.ImageUrl" 
                                             class="img-thumbnail me-3" 
                                             style="width: 80px; height: 80px; object-fit: cover;"
                                             alt="@item.Product?.Name" />
                                        <div>
                                            <h6 class="mb-1">@item.Product?.Name</h6>
                                            <small class="text-muted">@item.Product?.Category?.Name</small>
                                        </div>
                                    </div>
                                </td>
                                <td class="align-middle">
                                    <span class="h6">@item.Product?.Price.ToString("C")</span>
                                </td>
                                <td class="align-middle">
                                    <form method="post" class="d-inline">
                                        <div class="input-group input-group-sm" style="width: 120px;">
                                            <input type="hidden" name="cartItemId" value="@item.Id" />
                                            <button type="submit" asp-page-handler="Update" 
                                                    name="quantity" value="@(item.Quantity - 1)"
                                                    class="btn btn-outline-secondary" 
                                                    >
                                                −
                                            </button>
                                            <input type="number" 
                                                   class="form-control text-center" 
                                                   value="@item.Quantity" 
                                                   min="1" 
                                                   max="99"
                                                   onchange="this.form.quantity.value=this.value; this.form.submit()" />
                                            <button type="submit" asp-page-handler="Update" 
                                                    name="quantity" value="@(item.Quantity + 1)"
                                                    class="btn btn-outline-secondary">
                                                +
                                            </button>
                                        </div>
                                    </form>
                                </td>
                                <td class="align-middle">
                                    <span class="h6 text-success">
                                        @((item.Product?.Price * item.Quantity)?.ToString("C"))
                                    </span>
                                </td>
                                <td class="align-middle">
                                    <form method="post" class="d-inline">
                                        <input type="hidden" name="cartItemId" value="@item.Id" />
                                        <button type="submit" asp-page-handler="Remove" 
                                                class="btn btn-outline-danger btn-sm">
                                            <i class="fas fa-trash"></i>
                                        </button>
                                    </form>
                                </td>
                            </tr>
                        }
                    </tbody>
                    <tfoot class="table-light">
                        <tr>
                            <td colspan="3" class="text-end"><strong>Итого:</strong></td>
                            <td colspan="2">
                                <span class="h4 text-success">@Model.TotalAmount.ToString("C")</span>
                            </td>
                        </tr>
                    </tfoot>
                </table>
            </div>
        </div>
        
        <!-- Мобильная версия -->
        <div class="d-md-none">
            @foreach (var item in Model.CartItems)
            {
                <div class="card mb-3">
                    <div class="row g-0">
                        <div class="col-4">
                            <img src="@item.Product?.ImageUrl" 
                                 class="img-fluid rounded-start" 
                                 style="height: 120px; object-fit: cover;"
                                 alt="@item.Product?.Name" />
                        </div>
                        <div class="col-8">
                            <div class="card-body">
                                <h6 class="card-title">@item.Product?.Name</h6>
                                <p class="card-text text-success mb-1">@item.Product?.Price.ToString("C")</p>
                                
                                <div class="d-flex justify-content-between align-items-center mb-2">
                                    <form method="post" class="d-inline">
                                        <div class="input-group input-group-sm" style="width: 100px;">
                                            <input type="hidden" name="cartItemId" value="@item.Id" />
                                            <button type="submit" asp-page-handler="Update" 
                                                    name="quantity" value="@(item.Quantity - 1)"
                                                    class="btn btn-outline-secondary btn-sm" 
                                                    >
                                                −
                                            </button>
                                            <span class="form-control text-center bg-white">@item.Quantity</span>
                                            <button type="submit" asp-page-handler="Update" 
                                                    name="quantity" value="@(item.Quantity + 1)"
                                                    class="btn btn-outline-secondary btn-sm">
                                                +
                                            </button>
                                        </div>
                                    </form>
                                    
                                    <span class="h6 text-success">
                                        @((item.Product?.Price * item.Quantity)?.ToString("C"))
                                    </span>
                                </div>
                                
                                <form method="post" class="d-inline">
                                    <input type="hidden" name="cartItemId" value="@item.Id" />
                                    <button type="submit" asp-page-handler="Remove" 
                                            class="btn btn-outline-danger btn-sm">
                                        <i class="fas fa-trash"></i> Удалить
                                    </button>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            }
            
            <div class="card">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <h5 class="mb-0">Итого:</h5>
                        <span class="h4 text-success">@Model.TotalAmount.ToString("C")</span>
                    </div>
                </div>
            </div>
        </div>
        
        <!-- Кнопки действий -->
        <div class="row mt-4">
            <div class="col-md-6">
                <form method="post">
                    <button type="submit" asp-page-handler="Clear" 
                            class="btn btn-outline-secondary" 
                            onclick="return confirm('Очистить всю корзину?')">
                        <i class="fas fa-broom"></i> Очистить корзину
                    </button>
                </form>
            </div>
            <div class="col-md-6 text-md-end">
                <a href="/Catalog" class="btn btn-outline-primary me-2">
                    <i class="fas fa-arrow-left"></i> Продолжить покупки
                </a>
                
                @if (User.Identity?.IsAuthenticated ?? false)
                {
                    <a href="/Checkout" class="btn btn-success btn-lg">
                        <i class="fas fa-credit-card"></i> Оформить заказ
                    </a>
                }
                else
                {
                    <a href="/Identity/Account/Login?returnUrl=/Cart" class="btn btn-primary btn-lg">
                        <i class="fas fa-sign-in-alt"></i> Войти для оформления
                    </a>
                }
            </div>
        </div>
    }
    else
    {
        <!-- Пустая корзина -->
        <div class="text-center py-5">
            <div class="mb-4">
                <i class="fas fa-shopping-cart fa-4x text-muted"></i>
            </div>
            <h3>Ваша корзина пуста</h3>
            <p class="text-muted mb-4">Добавьте товары из каталога, чтобы сделать заказ</p>
            <a href="/Catalog" class="btn btn-primary btn-lg">
                <i class="fas fa-store"></i> Перейти в каталог
            </a>
        </div>
    }
</div>

<!-- Иконки FontAwesome -->
<script src="https://kit.fontawesome.com/ваш-код.js" crossorigin="anonymous"></script>

<style>
    .table-hover tbody tr:hover {
        background-color: rgba(67, 97, 238, 0.05);
    }
    
    .input-group .form-control[type="number"]::-webkit-inner-spin-button,
    .input-group .form-control[type="number"]::-webkit-outer-spin-button {
        -webkit-appearance: none;
        margin: 0;
    }
    
    .card {
        transition: transform 0.2s;
    }
    
    .card:hover {
        transform: translateY(-2px);
    }
</style>

<script>
    // Авто-обновление при изменении количества
    document.querySelectorAll('input[type="number"]').forEach(input => {
        input.addEventListener('change', function() {
            if (this.value < 1) this.value = 1;
            if (this.value > 99) this.value = 99;
            
            const form = this.closest('form');
            if (form) {
                const quantityInput = form.querySelector('[name="quantity"]');
                if (quantityInput) {
                    quantityInput.value = this.value;
                    form.submit();
                }
            }
        });
    });
</script>